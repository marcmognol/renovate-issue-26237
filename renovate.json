{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
        "main"
  ],
  "major": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        ".*\\.csproj$"
      ],
      "matchStrings": [
        "<ContainerBaseImage>(?<depName>[^:]*):(?<currentValue>.*)@(?<currentDigest>.*)<\/ContainerBaseImage>\\s"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
