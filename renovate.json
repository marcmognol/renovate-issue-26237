{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
        "main",
        "test"
  ],
  "packageRules": [
    {
      "matchBaseBranches": ["test"],
      "automerge": true,
      "automergeType": "branch",
      "enabled": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "*\\.csproj$"
      ],
      "matchStrings": [
        "<ContainerBaseImage>(?<depName>.*):(?<currentValue>.*)<\/ContainerBaseImage>\\s"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
